}

nav a::before {
    content: '';
    display: block;
    height: 5px;
    width: 100%;
    background-color: #749ca0;

    position: absolute;
    width: 0%;
    transition: all ease-in-out 250ms;
}

nav a:hover::before {
    width: 100%
}

